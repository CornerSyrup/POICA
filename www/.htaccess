# php
    php_value include_path ".;C:/Users/STUDY/Coding/hew2020/www/"

# Defaults
    DirectoryIndex None

# ErrorDoc
    #ErrorDocument 404 /error/404.html
    ErrorDocument 404 "its 404"

# Rewrites
    RewriteEngine On

    # forbidden
        RewriteRule ^model/ / [R=404]
        RewriteRule ^view/ / [R=404]
        RewriteRule ^controller/ / [R=404]

    # service
        RewriteRule ^signin/$ /controller/signin_std.php [NC,END]
        RewriteRule ^signin/suica/$ /controller/signin_suica.php [NC,END]
        RewriteRule ^signup/$ /controller/signup_std.php [NC,END]
        RewriteRule ^apply/form/$ /controller/apply/app_entry.php?id=0 [NC,END,QSA]
        RewriteRule ^apply/form/(\d+)/$ /controller/apply/app_entry.php?id=$1 [NC,END,QSA]

    # cdn
        RewriteRule ^cdn/(.+).js$ /js/$1.js [END]
        RewriteRule ^cdn/(.+).css$ /css/$1.css [END]

    # direct
        RewriteRule ^(.+)/$ /view/$1.php [END]
        RewriteRule ^(.+)(?<!/)$ /$1/ [R]